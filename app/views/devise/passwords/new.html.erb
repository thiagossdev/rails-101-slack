<div class="login-bg">
  <div class="container">
    <div id="login-page" class="row">
      <div class="col s12 m7 l5 z-depth-4 card-panel border-radius-6 login-card bg-opacity-8">
        <h2>Forgot your password?</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="row">
            <div class="field input-field col s12">
              <i class="material-icons prefix pt-2">person_outline</i>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              <%= f.label :email %>
            </div>
          </div>

          <div class="actions">
            <div class="row">
              <div class="field input-field col s12">
                <%= f.button raw('Send me reset password instructions <i class="material-icons right">send</i>'),
                    name: "commit",
                    type: "submit",
                    class: "btn waves-effect waves-light col s12" %>
              </div>
            </div>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
