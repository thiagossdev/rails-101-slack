<div class="login-bg">
  <div class="container">
    <div id="login-page" class="row">
      <div class="col s12 m7 l5 z-depth-4 card-panel border-radius-6 login-card bg-opacity-8">
        <h2>Log in</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="row">
            <div class="field input-field col s12">
              <i class="material-icons prefix pt-2">person_outline</i>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              <%= f.label :email %>
            </div>
          </div>

          <div class="row">
            <div class="field input-field col s12">
              <i class="material-icons prefix pt-2">lock_outline</i>
              <%= f.password_field :password, autocomplete: "off" %>
              <%= f.label :password %>
            </div>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="row">
              <div class="col s12 m12 l12 ml-2 mt-1">
                <p>
                  <label>
                    <%= f.check_box :remember_me %>
                    <span><%= f.label :remember_me %></span>
                  </label>
                </p>
              </div>
            </div>
          <% end %>

          <div class="actions">
            <div class="row">
              <div class="field input-field col s12">
                <%= f.button raw('Log in <i class="material-icons right">send</i>'),
                    name: "commit",
                    type: "submit",
                    class: "btn waves-effect waves-light col s12" %>
              </div>
            </div>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>